@model ProjectMaking.Models.ViewModel.vmAccount
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        
        <div class="col-md-6">
            <form id="accountFormDiv">
                <div class="card">
                    <div class="card-body">
                        <h3>Accounting</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AccountName"></label>
                                    <input type="text" asp-for="AccountName" class="form-control" value="" />

                                </div>
                                <div class="form-group">
                                    <label asp-for="Paybill"></label>
                                    <input type="number" asp-for="Paybill" class="form-control" value="" />

                                </div>
                                <div class="form-group">
                                    <label asp-for="TotalBill"></label>
                                    <input type="text" asp-for="TotalBill" class="form-control" value="" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ClientId"></label>
                                    <select asp-for="ClientId" class="select2 form-control">
                                        <option value="value">---Select---</option>
                                    </select>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AccountNumber"></label>
                                    <input type="text" asp-for="AccountNumber" class="form-control" value="" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="DeuBill"></label>
                                    <input type="number" asp-for="DeuBill" class="form-control" value="" />

                                </div>
                                <div class="form-group">
                                    <label asp-for="IssuDate"></label>
                                    <input type="text" asp-for="IssuDate" class="form-control" value="" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductId"></label>
                                    <select asp-for="ProductId" class="select2 form-control">
                                        <option value="value">---Select---</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
      
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">

                </div>

            </div>
        </div>
    </div>

