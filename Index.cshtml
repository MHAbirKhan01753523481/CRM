@model ProjectMaking.Models.ViewModel.vmClient
@using ProjectMaking.Enum
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mt-0 mb-3">Leads Report</h4>
                <form id="clientForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="StatusType"></label>
                                <select asp-for="StatusType" asp-items="@Html.GetEnumSelectList<StatusType>()" class="select2 form-control">
                                    <option value="0">--Select--</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CompanyName"></label>
                                <input type="text" asp-for="CompanyName" class="form-control" placeholder="Enter Address">
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone"></label>
                                <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Address">
                            </div>
                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <select class="select2 form-control" asp-for="Country">
                                    <option value="USA">USA</option>
                                    <option value="Bangladesh">Bangladesh</option>
                                    <option value="India">India</option>

                                </select>

                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <textarea class="form-control" asp-for="Address" rows="5"></textarea>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Image</label>
                                <input type="file" asp-for="Image" id="input-file-now-custom-1" data-height="100" class="dropify" />
                            </div>

                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" id="clientSubmit" class="btn btn-primary ">Submit</button>
                        <button type="button" class="btn btn-danger clientBtn">Cancel</button>
                    </div>
                </form>
            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->

</div><!--end row-->
<!-- container -->

@section Scripts{

    <script src="~/js/Client/client.js"></script>
    <script>
        $(".select2").select2({

        });
    </script>

    <script>
        $("#clientForm").validate({
            ignore: false,
            rules: {
                Name: {
                    required: true,
                },
                StatusType: {
                    required: true,
                },
                Phone: {
                    required: true,
                },
                Address: {
                    required: true,
                }
            },
        });

    </script>

}

