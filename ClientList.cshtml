
@{
    ViewData["Title"] = "ClientList";


}


<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-right">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Metrica</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">CRM</a></li>
                        <li class="breadcrumb-item active">Leads</li>
                    </ol>
                </div>
                <h4 class="page-title">Leads</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body profile-card">
                    @foreach (var item in ViewBag.leadmanagerItem)
                    {
                        <div class="media align-items-center">
                            <img src="@item.PhotoUrl" style="border:2px solid black;" height="75" width="70">
                            <div class="media-body ml-3 align-self-center">
                                <h6 class="pro-title">@item.Name</h6>
                                <p>@item.Designation</p>
                            </div>

                            <div class="action-btn">
                                <button class="mr-1 btn btn-sm btn-success managerEditBtn" title="Manager Edit" data-id="@item.Id"><i class="fas fa-pen"></i></button>
                                <br />
                                <br />
                                <button class="btn btn-sm btn-primary managerDetailsBtn" title="Manager details" data-id="@item.Id"><i class="fas fa-file-alt"></i></button>
                            </div>

                        </div>
                    }
                  

                </div><!--end card-body-->
            </div><!--end card-->
        </div><!-- end col-->
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4 align-self-center">
                                    <div class="icon-info">
                                        <i class="mdi mdi-account-group text-warning"></i>
                                    </div>
                                </div>
                                <div class="col-8 align-self-center text-right">
                                    <div class="ml-2">
                                        <p class="mb-1 text-muted">Total Leads</p>
                                        <h4 class="mt-0 mb-1">@ViewBag.TotalLead</h4>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="progress mt-2" style="height:3px;">
                                @if (@ViewBag.TotalLead >= 20)
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 20%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.TotalLead >= 40)
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 40%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.TotalLead >= 60)
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 60%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.TotalLead >= 80)
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 80%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.TotalLead >= 100)
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 100%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else
                                {
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 10%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                }

                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4 align-self-center">
                                    <div class="icon-info">
                                        <i class="mdi mdi-folder-open text-purple"></i>
                                    </div>
                                </div>
                                <div class="col-8 align-self-center text-right">
                                    <div class="ml-2">
                                        <div class="ml-2">
                                            <p class="mb-0 text-muted">Open</p>
                                            <h4 class="mt-0 mb-1 d-inline-block">@ViewBag.ActiveLead</h4>
                                            <span class="badge badge-success mt-1 shadow-none">Active</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="progress mt-2" style="height:3px;">
                                @if (@ViewBag.ActiveLead >= 10)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 15%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 20)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 20%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 30)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 30%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 40)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 40%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 50)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 50%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 60)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 60%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 70)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 70%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 80)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 80%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 90)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 90%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else if (@ViewBag.ActiveLead >= 100)
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 100%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else
                                {
                                    <div class="progress-bar bg-purple" role="progressbar" style="width: 5%;" aria-valuenow="39" aria-valuemin="0" aria-valuemax="100"></div>
                                }

                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4 align-self-center">
                                    <div class="icon-info">
                                        <i class="mdi mdi-folder text-pink"></i>
                                    </div>
                                </div>
                                <div class="col-8 align-self-center text-right">
                                    <div class="ml-2">
                                        <p class="mb-0 text-muted">Close</p>
                                        <h4 class="mt-0 mb-1 d-inline-block">@ViewBag.LostLead</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="progress mt-2" style="height:3px;">

                                @if (@ViewBag.LostLead >= 10)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:10%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 20)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:20%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 30)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:30%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 40)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:40%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 50)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:50%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 60)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:60%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 70)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:70%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 80)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:80%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 90)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:90%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                @if (@ViewBag.LostLead >= 100)
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" width="5%" style="width:100%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }
                                else
                                {
                                    <div class="progress-bar bg-pink" role="progressbar" style="width: 3%;" aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                                }

                            </div>
                        </div><!--end card-body-->
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end col-->

    </div><!--end row-->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-primary waves-effect waves-light float-right mb-3" data-toggle="modal" data-animation="bounce" data-target=".bs-example-modal-lg">+ Add New</button>
                    <h4 class="header-title mt-0 mb-3">All Leads</h4>
                    <div class="table-responsive dash-social">
                        <table id="clientDataTable" class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th colspan="2">Name of Lead</th>

                                    <th>E-Mail</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr><!--end tr-->
                            </thead>

                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->

</div><!-- container -->
