@section Scripts{
    <script src="~/js/Client/client.js"></script>

    <script>




        $(document).ready(function () {

            $("body").on("click", ".managerEditBtn", function () {
                $("#managerEdit-Modal").modal("show");
                let jsondata = {
                    id: $(this).attr("data-id")
                };

                //let Id = $(this).attr("data-id");
                console.log("Id " + jsondata);
                $.ajax({
                    url: "/Manager/ManagerEditView/",
                    type: "GET",
                    data: jsondata,
                    success: function (response) {
                        $("#managerEdit-FormDiv").html(response);
                    }
                });

            });

            $("body").on("click", ".managerDetailsBtn", function () {

                $("#managerDetails-Modal").modal("show");
                let jsondata = {
                    id: $(this).attr("data-id")
                };

                //let Id = $(this).attr("data-id");
                $.ajax({
                    url: "/Manager/ManagerDetails/",
                    type: "GET",
                    data: jsondata,
                    success: function (response) {
                        $("#managerDetails-FormDiv").html(response);
                    }
                });

            });

        });



    </script>

}
