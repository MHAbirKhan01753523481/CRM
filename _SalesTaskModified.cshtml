                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <div style="width:100%;">
                                        <select asp-items="@ViewBag.manager" class="select2 form-control">
                                            <option value="0">---Select---</option>
                                        </select>
                                    </div>

                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TaskName"></label>
